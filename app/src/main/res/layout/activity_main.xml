<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.davidsebestyen.herocomic.MainActivity">
    
    <ImageView
        android:id="@+id/comic_banner"
        android:src="@drawable/comicbanner"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="200dp" />

    <ImageView
        android:src="@drawable/superman"
        android:layout_width="150dp"
        android:layout_height="200dp" />

    <ImageView
        android:src="@drawable/captain_america"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:layout_alignParentRight="true"/>

    <TextView
        android:id="@+id/banner_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/comic_banner"
        android:text="Hero Comics"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="#E8EAF6"
        android:textAlignment="center"
        android:background="#3F51B5"/>

    <TextView
        android:id="@+id/welcome_text"
        android:layout_below="@+id/banner_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome Hero!"
        android:layout_marginLeft="10dp"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/introduction_text"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/welcome_text"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:text="Our small shop specialises in selling new and rare comics you might not be able to get anywhere else. Our friendly staff awaits your arrival in our store in Kent county England. Hopefully you will find what you looking for and we hope to see you soon in our store."/>


    <TextView
        android:id="@+id/contact_details_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/introduction_text"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:textStyle="bold"
        android:text="Contact Details:"/>

    <TextView
        android:id="@+id/address_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="16dp"
        android:layout_below="@+id/contact_details_text"
        android:text="4 St Botolph Road, Gravesend, United Kingdom, DA11 8ES"/>

    <TextView
        android:id="@+id/phone_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/address_text"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="10dp"
        android:text="Phone: 07880777375"/>

</RelativeLayout>
</ScrollView>
